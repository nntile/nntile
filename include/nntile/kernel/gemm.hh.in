#pragma once

#include <nntile/base_types.hh>
#include <nntile/defs.h>

#ifdef NNTILE_USE_CBLAS
#    include <@CBLAS_H_NAME@>
#    ifndef CBLAS_INT
#        define CBLAS_INT @CBLAS_INT_TYPE@
#    endif // CBLAS_INT
#endif // NNTILE_USE_CBLAS

#ifdef NNTILE_USE_CUDA
#    include <cublas_v2.h>
#    include <starpu_cublas_v2.h>
//#    include <cuda_fp16.h>
